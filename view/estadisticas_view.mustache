{{#isAdmin}}
    <!-- Contenido específico para el rol de Admin -->
    {{> header_admin}}
    </div>

        <!-- User Actions -->
        <div class="container mt-4">
            <h2>Estadisticas</h2>
            <div class="row">
                <!-- Formulario de fechas -->
                <form action="/admin/estadisticas" method="POST">
                    <div class="form-group">
                        <label for="startDate">Fecha de inicio:</label>
                        <input type="date" id="startDate" name="startDate" class="form-control" value="{{startDate}}" required>
                    </div>
                    <div class="form-group">
                        <label for="endDate">Fecha de fin:</label>
                        <input type="date" id="endDate" name="endDate" class="form-control" value="{{endDate}}" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
            <h2>Estadisticas</h2>
            <a type="submit" class="btn btn-primary" href="/admin/estadisticas?startDate={{startDate}}&endDate={{endDate}}">Descargar pdf</a>
            <div class="row">
                <!-- Imagen 1 -->
                <div class="col-md-4">
                    <div class="card">
                        <img src='data:image/png;base64,{{barcharUsuariosActivos}}' class="card-img-top" alt="Gráfico 1">
                    </div>
                </div>
                <!-- Imagen 2 -->
                <div class="col-md-4">
